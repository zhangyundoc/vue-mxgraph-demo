.flow-main
    height 100%
.flow-content-main
    display flex
    height 100%
    background #fff
    box-shadow rgba(52, 57, 87, 0.1) 0px 0px 8px 0px
.siderbar-container
    display flex
    width 200px
    height 100%
    background #ccc
    ul
        flex 1
        padding-left 0
        li
            margin-bottom 5px
            height 32px
            border 1px solid red
            list-style none
            text-align center
            font-weight 600
            line-height 32px
            cursor pointer
            transition all 0.5s
            &:hover
                background-color #B4E1FF
.graph-container
    flex 7
    height 100%
    background url('../../assets/images/grid.gif')
